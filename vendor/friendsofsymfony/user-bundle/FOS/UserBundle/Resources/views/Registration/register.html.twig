{% extends 'base.html.twig' %}

{% block contenido %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    	<h3> {{ app.user.username }} ya estas logueado!!!! </h3>
    {% else %}
    	<h2 class="titulo"> Nuevo usuario </h2>
	    <div>
        {{ form_start(form) }}
            <div style="display:flex; justify-content:center;">
                <div class="columna-form" style="margin-left: 30px; margin-right: 30px;">
                	{{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword) }}
                </div>

                <div class="columna-form" style="margin-left: 30px; margin-right: 30px;">
                    {{ form_row(form.nombre) }}
                    {{ form_row(form.apellido) }}
                    {{ form_row(form.documento) }}
                    <input type="submit" class="button-login button "  value="{{ 'Registrarme'|trans({}, 'FOSUserBundle') }}" />
                </div>
    	    <div>
	    </div>

	     {{ form_end(form) }}
    {% endif %}
</form>

{% endblock contenido %}
